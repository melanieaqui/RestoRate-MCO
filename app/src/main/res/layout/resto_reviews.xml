<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="489dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/image_profile"
                    android:layout_width="64dp"
                    android:layout_height="59dp"
                    app:srcCompat="@drawable/chowking"
                    tools:src="@tools:sample/avatars"
                    tools:srcCompat="@tools:sample/avatars" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_user"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Username"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Manila" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txt_food"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Food Quality:" />

                    <TextView
                        android:id="@+id/txt_service"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Service:" />

                    <TextView
                        android:id="@+id/txt_environment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Environment:" />

                    <TextView
                        android:id="@+id/txt_overall"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Overall Rating:" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/image_review"
                android:layout_width="match_parent"
                android:layout_height="157dp"
                app:srcCompat="@drawable/chickenjoy" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>